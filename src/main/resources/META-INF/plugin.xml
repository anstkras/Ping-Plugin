<idea-plugin>
    <id>com.anstkras</id>
    <name>Ping Plugin</name>
    <version>0.0.1</version>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable groupId="tools" displayName="PingPlugin"
                                 id="preferences.PingConfigurable"
                                 instance="configurable.PingConfigurable"/>
        <applicationService serviceInterface="configurable.PingConfig" serviceImplementation="configurable.PingConfig"/>
        <statusBarWidgetProvider implementation="ping.PingStatusBarWidgetProvider"/>

    </extensions>

    <application-components>
        <component>
            <implementation-class>ping.PingComponent</implementation-class>
        </component>
    </application-components>
</idea-plugin>